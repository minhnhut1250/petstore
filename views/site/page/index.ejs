<!--//banner-->
<% if(success_msg != ''){ %>
  <script>
    alert('<%=success_msg%>');
  </script>
<% } %>
<%  cate.forEach(function(ca){ var id = 0; %>
<div class="new">
  <div class="container">
    <div class="title-info wow fadeInUp animated" data-wow-delay=".5s">
      <h3 class="title">
        <%= ca.name%><span></span></h3>
      <h5 class="title"><p>************************************************************************** </p></h5>
    </div>
    <div class="new-info">
      <%  product.forEach(function(pro){ if(id < 4 ) { if(pro.cateId == ca._id){ id ++ ; %>
      <div class="col-md-3 new-grid simpleCart_shelfItem wow flipInY animated" style="margin-right: 1.25em" data-wow-delay=".5s">
                    <div class="new-top"  style="height:300px;">
                        <a href="/chi-tiet/<%= pro.name%>.<%= pro._id%>.<%= pro.cateId%>"><img src="upload/<%= pro.img %>" class="img-responsive" alt="" /></a>
                        <div class="new-text">
                            <ul>
                                <li><a href="/chi-tiet/<%= pro.name%>.<%= pro._id%>.<%= pro.cateId%>">Xem chi tiết </a></li>
                                <li><a class="item_add" href="/add-cart.<%= pro._id %>"> Thêm vào giỏ hàng</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="new-bottom">
                        <h5><a class="name" style="font-size: 15px;" href="/chi-tiet/<%= pro.name%>.<%= pro._id%>.<%= pro.cateId%>"><%=pro.name.substring(0,25)%></a></h5>
                        <br>
                        <div class="rating">
                          <span class="on">☆</span>
                          <span class="on">☆</span>
                          <span class="on">☆</span>
                          <span >☆</span>
                          <span>☆</span>
                        </div>
                        <%if( pro.promotion <= 0 ) { %>
                        <div class="ofr">
                        	<p style = "width:100%;">
                            Giá: 
                            <span class="item_price" style="color: #FF590F;"><%=pro.price%> VNĐ</span>
                          </p>
                        </div>
                        <% } else { %>
                        <div class="ofr">
                        	<p>
                            Giá: 
                            <del><%=pro.price%> VNĐ</del>
                            <span class="item_price" style="color: #FF590F;"><%=(pro.price)-((pro.price) * ((pro.promotion) /100))%> VNĐ</span>
                          </p>
                        </div>
                        <% } %>
                    </div>
                </div>
      <%}}})%>
      <div class="clearfix"></div>
    </div>
  </div>
</div>
<% })%>
