<body>

  <% include ../layout/header.ejs %>

  <div class="breadcrumbs">
    <div class="container">
      <ol class="breadcrumb breadcrumb1 animated wow slideInLeft animated" data-wow-delay=".5s" style="visibility: visible; animation-delay: 0.5s; animation-name: slideInLeft;">
        <li><a href="trang-chu"><span class="glyphicon glyphicon-home" aria-hidden="true"></span>Trang chủ</a></li>
        <li class="active">Giỏ hàng</li>
      </ol>
    </div>
  </div>
  <!-- Header End -->
  <div class="codes">
    <div class="container">
      <div class="row">
        <div class="col-md-7" style="margin-top:15px;">
          <h4 class="panel-title" style="margin-bottom: 0;font-size: 22px;">
            Giao hàng tới địa chỉ
          </h4>
          <% if(errors) { %>
          <div class="alert alert-danger">
            <% errors.forEach(function(e){ %>

            <%= e.msg %> <br />
            <%});%>

          </div>
          <% };%>
          <form style="padding-top: 45px;" method="POST" action="">
            <div class="form-group">
              <label>Họ Tên *</label>
              <input type="text" class="form-control" name="name">
            </div>
            <div class="form-group">
              <label>Email *</label>
              <input type="email" class="form-control" name="email" autofocus="false" />
            </div>
            <div class="form-group">
              <label>Địa chỉ giao hàng *</label>
              <input type="text" class="form-control" name="address" id="address">
            </div>
            <div class="form-group">
              <label>Điện thoại *</label>
              <input type="number" class="form-control" name="phone">
            </div>
            <div class="form-group">
              <label>Ghi chú</label>
              <textarea class="form-control" name="message" id="message"></textarea>
            </div>
            <div class="row" style="margin-top:25px;">
              <div class="col-md-12">
                <button type="submit" style="width: 100%" id="submit_id" class="btn btn-warning">ĐẶT HÀNG</button>
              </div>
            </div>
          </form>
          <div class="userContent" style="display: none;"></div>
        </div>
        <div class="col-md-5">
          <div class="collpse tabs">
            <div class="panel-group collpse" role="tablist" aria-multiselectable="true">
              <h4 class="panel-title" style="margin-bottom: 0; font-size: 22px;">
                Danh sách đã mua
              </h4>
              <div class="bs-docs-example wow fadeInDown animated animated" data-wow-delay=".5s" style="visibility: visible; animation-delay: 0.5s; animation-name: fadeInDown;">
                <table class="table table-striped">
                  <thead>
                    <tr>
                      <th>#</th>
                      <th>Tên SP</th>
                      <th>Ảnh</th>
                      <th>Số Lượng</th>
                      <th>Thành Tiền</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% var total = 0; if(data){ data.forEach(function(item){ total += item.tien %>
                    <tr>
                      <td>1</td>
                      <td>
                        <%=item.item.name%>
                      </td>
                      <td><img style="width: 50%; float: left; margin-right: 5%;" src="upload/<%= item.item.img%>"></td>
                      <td>
                        <%= item.soluong%>
                      </td>
                      <td>
                        <%= item.tien%> VNĐ</td>
                    </tr>
                    <%})}%>
                    <tr>
                      <td colspan="5">
                        <h4 style="float: right; font-size: 22px;">Tổng tiền:
                          <%=total%> VNĐ
                        </h4>
                      </td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="clearfix"> </div>
  </div>
  <!-- Footer -->
  <% include ../layout/footer.ejs %>
  <!--search jQuery-->
  <script src="customer/js/main.js"></script>
  <!--//search jQuery-->
  <!--smooth-scrolling-of-move-up-->


  <script type="text/javascript">
    $(document).ready(function () {

      var defaults = {
        containerID: 'toTop', // fading element id
        containerHoverID: 'toTopHover', // fading element hover id
        scrollSpeed: 1200,
        easingType: 'linear'
      };

      $().UItoTop({
        easingType: 'easeOutQuart'
      });

    });
  </script>
  <!--//smooth-scrolling-of-move-up-->
