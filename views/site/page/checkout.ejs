<!DOCTYPE html>
<html>

<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <base href="http://localhost:8000/">
  <title>Pet Store - Cửa hàng thú cưng trực tuyến</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <script type="application/x-javascript">
    addEventListener("load", function () {
      setTimeout(hideURLbar, 0);
    }, false);

    function hideURLbar() {
      window.scrollTo(0, 1);
    }
  </script>
  <!--//for-mobile-apps -->
  <!--Custom Theme files -->
  <link href="customer/css/bootstrap.css" rel="stylesheet" type="text/css" media="all" />
  <link href="customer/css/style.css" rel="stylesheet" type="text/css" media="all" />
  <link rel="stylesheet" href="customer/css/flexslider.css" type="text/css" media="screen" />
  <!--//Custom Theme files -->
  <!--js-->
  <script src="customer/js/jquery-1.11.1.min.js"></script>
  <script src="customer/js/modernizr.custom.js"></script>
  <!--//js-->
  <!--cart-->
  <!-- <script src="customer/js/simpleCart.min.js"></script> -->
  <!--cart-->
  <!--web-fonts-->
  <link href='//fonts.googleapis.com/css?family=Raleway:400,100,100italic,200,200italic,300,400italic,500,500italic,600,600italic,700,700italic,800,800italic,900,900italic'
    rel='stylesheet' type='text/css'>
  <link href='//fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600,600italic,700,700italic,800,800italic'
    rel='stylesheet' type='text/css'>
  <link href='//fonts.googleapis.com/css?family=Pompiere' rel='stylesheet' type='text/css'>
  <link href='//fonts.googleapis.com/css?family=Fascinate' rel='stylesheet' type='text/css'>
  <!--web-fonts-->
  <!--animation-effect-->
  <link href="customer/css/animate.min.css" rel="stylesheet">
  <script src="customer/js/wow.min.js"></script>
  <script>
    new WOW().init();
  </script>
  <!--//animation-effect-->
  <!--start-smooth-scrolling-->
  <script type="text/javascript" src="customer/js/move-top.js"></script>
  <script type="text/javascript" src="customer/js/easing.js"></script>
  <script type="text/javascript">
    jQuery(document).ready(function ($) {
      $(".scroll").click(function (event) {
        event.preventDefault();
        $('html,body').animate({
          scrollTop: $(this.hash).offset().top
        }, 1000);
      });
    });
  </script>
</head>

<body>

  <% include ../layout/header.ejs %>

  <div class="breadcrumbs">
    <div class="container">
      <ol class="breadcrumb breadcrumb1 animated wow slideInLeft animated" data-wow-delay=".5s" style="visibility: visible; animation-delay: 0.5s; animation-name: slideInLeft;">
        <li><a href="trang-chu"><span class="glyphicon glyphicon-home" aria-hidden="true"></span>Trang chủ</a></li>
        <li class="active">Giỏ hàng</li>
      </ol>
    </div>
  </div>
  <!-- Header End -->
  <div class="codes">
    <div class="container">
      <div class="row">
        <div class="col-md-9">
          <div class="collpse tabs">
            <div class="panel-group collpse" role="tablist" aria-multiselectable="true">
              <div class="panel panel-default" data-wow-delay=".5s">
                <div class="panel-heading" role="tab" id="headingOne">
                  <h4 class="panel-title" style="margin-bottom: 0">
                    <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true"
                      aria-controls="collapseOne">
                      Địa chỉ giao hàng
                    </a>
                  </h4>
                </div>
                <div class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
                  <% if(errors) { %>
                  <div class="alert alert-danger">
                    <% errors.forEach(function(e){ %>

                    <%= e.msg %> <br />
                    <%});%>

                  </div>
                  <% };%>
                  <div class="panel-body">
                    <form style="padding: 25px;" method="POST" action="">
                      <div style="font-size: 19px; margin-bottom: 25px;">
                        <h2>Địa chỉ giao hàng</h2>
                      </div>
                      <div class="form-group">
                        <label>Họ Tên *</label>
                        <input type="text" class="form-control" name="name" placeholder="Họ và tên">
                      </div>
                      <div class="form-group">
                        <label>Email *</label>
                        <input type="email" class="form-control" name="email" placeholder="email@gmail.com" autofocus="false" />
                      </div>
                      <div class="form-group">
                        <label>Địa chỉ giao hàng *</label>
                        <input type="text" class="form-control" name="address" id="address" placeholder="43/2, KV3, Xuân Khánh, Ninh Kiều, TP.Cần Thơ">
                      </div>
                      <div class="form-group">
                        <label>Điện thoại *</label>
                        <input type="number" class="form-control" name="phone" placeholder="09434323423">
                      </div>
                      <div class="form-group">
                        <label>Ghi chú</label>
                        <textarea class="form-control" name="message"  id="message"></textarea>
                      </div>
                      <div class="row" style="margin-top:25px;">
                        <div class="col-md-6">
                          <a href="thanh-toan" style="width: 100%" class="btn btn-primary">Thanh toán trực tuyến</a>
                        </div>
                        <div class="col-md-6">
                          <button type="submit" style="width: 100%" id="submit_id" class="btn btn-warning">Đặt hàng</button>
                        </div>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-3" style="margin-top:15px;">
          <h4 class="panel-title" style="margin-bottom: 0">
            Danh sách đã mua
          </h4>
          <% var total = 0; if(data){ data.forEach(function(item){ total += item.tien %>
          <div class="cart-header wow fadeInUp animated" data-wow-delay=".5s">
            <div class="cart-sec simpleCart_shelfItem">
              <div class="cart-item cyc">
                <a href="/chi-tiet/<%= item.item.name%>.<%= item.item._id%>.<%= item.item.cateId%>"><img src="upload/<%= item.item.img%>"
                    class="img-responsive" alt=""></a>
              </div>
              <div class="cart-item-info">
                <h4>
                  <%= item.item.name%>
                </h4>
              </div>
              <ul class="qty">
                <li>
                  <h4><p>Số lượng :</p></h4>
                </li>
                <li>
                  <h4><p><%= item.soluong%></p></h4>
                </li>
              </ul>
              <ul class="qty">
                <li>
                  <h4><p>Thành tiền :</p></h4>
                </li>
                <li>
                    <h4><p><%= item.tien%> VNĐ</p></h4>
                </li>
              </ul>
              <div class="clearfix"></div>
            </div>
          </div>
          <hr>
          <%})}%>
        </div>
        <h3 style="float: right;">Tổng tiền:
          <%=total%> VNĐ
        </h3>
      </div>
    </div>
  </div>
  </div>
  <div class="clearfix"> </div>
  </div>

  <!-- Footer -->
  <% include ../layout/footer.ejs %>


  <!--search jQuery-->
  <script src="customer/js/main.js"></script>
  <!--//search jQuery-->
  <!--smooth-scrolling-of-move-up-->

  
  <script type="text/javascript">
    $(document).ready(function () {

      var defaults = {
        containerID: 'toTop', // fading element id
        containerHoverID: 'toTopHover', // fading element hover id
        scrollSpeed: 1200,
        easingType: 'linear'
      };

      $().UItoTop({
        easingType: 'easeOutQuart'
      });

    });
  </script>
  <!--//smooth-scrolling-of-move-up-->
  <!--Bootstrap core JavaScript
  ================================================== -->
  <!--Placed at the end of the document so the pages load faster -->
  <script src="customer/js/bootstrap.js"></script>
</body>
<html>